apiVersion: v1
kind: Namespace
metadata:
  name: inference-server

---

apiVersion: apps/v1
kind: Deployment
metadata:
  name: gemma-3-1b-it-inference-server
  namespace: inference-server
  labels:
    examples.ai.gke.io/deployment-id: gemma-3-1b-it-inference-server-bycaK
    examples.ai.gke.io/applied-by: gke-aiml-ui
    examples.ai.gke.io/deployment-path: model-garden
spec:
  replicas: 1
  selector:
    matchLabels:
      app: gemma-3-1b-it-inference-server-app
  template:
    metadata:
      labels:
        app: gemma-3-1b-it-inference-server-app
        ai.gke.io/model: google.gemma-3-1b-it
        ai.gke.io/inference-server: vllm
        examples.ai.gke.io/source: model-garden
        examples.ai.gke.io/deployment-id: gemma-3-1b-it-inference-server-bycaK
        examples.ai.gke.io/applied-by: gke-aiml-ui
        examples.ai.gke.io/deployment-path: model-garden
    spec:
      containers:
      - name: inference-server
        image: us-docker.pkg.dev/vertex-ai/vertex-vision-model-garden-dockers/pytorch-vllm-serve:20250312_0916_RC01
        resources:
          requests:
            cpu: 9
            memory: 34Gi
            ephemeral-storage: 80Gi
            nvidia.com/gpu: 1
          limits:
            cpu: 9
            memory: 34Gi
            ephemeral-storage: 80Gi
            nvidia.com/gpu: 1
        args:
        - python
        - -m
        - vllm.entrypoints.api_server
        - --host=0.0.0.0
        - --port=7080
        - --swap-space=16
        - --model=google/gemma-3-1b-it
        - --tensor-parallel-size=1
        - --gpu-memory-utilization=0.95
        - --disable-log-stats
        env:
        - name: MODEL_ID
          value: google/gemma-3-1b-it
        - name: DEPLOY_SOURCE
          value: UI_HF_VERIFIED_MODEL
        - name: HUGGING_FACE_HUB_TOKEN
          valueFrom:
            secretKeyRef:
              name: gemma-3-1b-it-inference-server-secret
              key: hf_api_token
        volumeMounts:
        - mountPath: /dev/shm
          name: dshm
      volumes:
      - name: dshm
        emptyDir:
          medium: Memory
      nodeSelector:
        cloud.google.com/gke-accelerator: nvidia-l4
---
apiVersion: v1
kind: Service
metadata:
  name: gemma-3-1b-it-inference-server-service
  namespace: inference-server
  labels:
    examples.ai.gke.io/deployment-id: gemma-3-1b-it-inference-server-bycaK
    examples.ai.gke.io/applied-by: gke-aiml-ui
    examples.ai.gke.io/deployment-path: model-garden
spec:
  selector:
    app: gemma-3-1b-it-inference-server-app
  type: ClusterIP
  ports:
  - protocol: TCP
    port: 8000
    targetPort: 7080
